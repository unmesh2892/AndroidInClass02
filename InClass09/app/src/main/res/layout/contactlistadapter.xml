<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="101dp"
        android:layout_height="119dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/ContactName"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="@string/ContactName"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContactPhone"
        android:layout_width="94dp"
        android:layout_height="38dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="@string/ContactPhone"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/ContactName" />

    <TextView
        android:id="@+id/ContactEmail"
        android:layout_width="94dp"
        android:layout_height="37dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="@string/ContactEmail"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/ContactPhone" />

    <ImageView
        android:id="@+id/ContactEdit"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/ContactName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_profile" />

    <ImageView
        android:id="@+id/ContactDelete"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/ContactPhone"
        app:layout_constraintTop_toBottomOf="@+id/ContactEdit"
        app:srcCompat="@drawable/delete" />

</android.support.constraint.ConstraintLayout>